{
  "name": "time-of-garden",
  "version": "2.0.0",
  "description": "Launcher Time of Garden",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:publish": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^7.0.3",
    "electron-updater": "^6.8.3",
    "minecraft-launcher-core": "^3.17.0",
    "mineflayer": "^4.23.0",
    "msmc": "^5.0.5",
    "ssh2-sftp-client": "^10.0.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^5.1.0"
  },
  "build": {
    "appId": "com.custom.time-of-garden",
    "productName": "Time of Garden",
    "directories": {
      "output": "dist"
    },
    "icon": "build/icon.png",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "minimumSystemVersion": "13.0",
      "category": "public.app-category.games"
    },
    "extraResources": [
      {
        "from": "resources/mods",
        "to": "mods",
        "filter": [
          "**/*.jar"
        ]
      },
      {
        "from": "resources/fancymenu",
        "to": "fancymenu"
      },
      {
        "from": "resources/resourcepacks",
        "to": "resourcepacks"
      }
    ],
    "files": [
      "out/**/*"
    ],
    "releaseInfo": {
      "releaseNotes": "Version 2.0.0 — Refonte complète du launcher : nouveau thème Create/industriel, animations, mises à jour automatiques avec confirmation, resource pack par défaut intégré."
    },
    "publish": {
      "provider": "github",
      "owner": "Mycate39",
      "repo": "Time-of-Garden",
      "releaseType": "release"
    }
  }
}
